{
  "author": "Sparklytical <sparklytical@pm.me>",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "argon2": "^0.27.0",
    "chalk": "^4.1.0",
    "class-validator": "^0.12.2",
    "connect-redis": "^5.0.0",
    "cron": "^1.8.2",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "graphql": "^15.4.0",
    "ioredis": "^4.19.2",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.29"
  },
  "description": "NodeJS, Typescript, Typeorm, Type-graphql, Apollo Server Boilerplate",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@graphql-codegen/cli": "^1.19.2",
    "@graphql-codegen/typed-document-node": "^1.17.10",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-resolvers": "^1.17.11",
    "@types/cheerio": "^0.22.22",
    "@types/connect-redis": "^0.0.15",
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "dotenv": "^8.2.0",
    "eslint": "^7.14.0",
    "eslint-config-galex": "^2.7.8",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "hooks": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "apollo",
    "apollo-server",
    "boilerplate",
    "nodejs",
    "type-graphql",
    "typeorm",
    "typescript"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,tsx,ts,tsx,css,scss}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  },
  "main": "index.ts",
  "name": "server",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index",
    "format": "prettier src/*.ts --write",
    "gen": "graphql-codegen",
    "lint": "eslint src/*.ts",
    "lint:fix": "eslint src/*.ts --fix",
    "start": "ts-node src/index.ts",
    "start:source": "tsc && node out/index.ts",
    "test": "jest",
    "watch": "tsc src/index.ts --watch"
  },
  "type": "module",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sparklytical/Fullstack-Boilerplate.git"
  }
}
